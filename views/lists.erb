<ul id="lists">
  <% @lists.each.with_index do |list, index| %>
    <% if list[:todos].map {|todo| todo[:completed] }.all? == true &&
          list[:todos].count > 0 %>
      <li class='complete'>
    <% else %>
      <li class='uncomplete'>
    <% end %>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= count_completed_todos(list) %> / <%= list[:todos].count %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class='add' href="/lists/new">New List</a>
<% end %>
