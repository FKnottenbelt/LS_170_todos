<section id='todos' class=''>
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class='edit' href='/lists/<%= params[:index] %>/edit'>Edit List</a>
      </li>
    </ul>

    <ul class='todo-list'>
      <% @list[:todos].each do|todo| %>
        <li>
          <h2><%= todo %></h3>
        </li>
      <% end %>
    </ul>

   </header>
</section>

<form action="/lists/<%= params[:index] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text"
        value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
    <a href="/lists/<%= params[:index] %>/todos">Cancel</a>
  </fieldset>
</form>


<% content_for :header_links do %>
  <a href='/lists'>All lists</a>
<% end %>
